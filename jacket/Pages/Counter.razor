@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@ClickMe</button>


<p style="margin-top:50px;">
    <MudText Typo="Typo.h6">You are awesome @Text</MudText>
    <MudButton OnClick="Change" Color="Color.Primary" Variant="Variant.Filled">@ButtonText</MudButton>
</p>



@code {
    private int currentCount = 0;

    [Parameter]
    public int IncreamentBy { get; set; } = 1;

    public string ClickMe { get; set; } = "Click Me";

    private void IncrementCount()
    {
        currentCount = currentCount + IncreamentBy;
        ClickMe = "Click Me Again";
    }

    [Parameter]
    public int num { get; set; }
    private string Text { get; set; } = "";
    private string ButtonText { get; set; } = "Click Me";

    private void Change()
    {
        num += 1;
        Text = "X " + num.ToString();
        ButtonText = "Click me again";
    }
}
